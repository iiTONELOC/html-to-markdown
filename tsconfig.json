{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./src",
        "declarationDir": "./dist",
        "alwaysStrict": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "Node",
        "incremental": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
    ]
}